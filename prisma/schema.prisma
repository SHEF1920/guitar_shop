generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guitar {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  updatedAt   DateTime  @updatedAt
  order       Order[]
  comments    Comment[]
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  password String
  order Order[]
  comments  Comment[]
}

model Order {
  id        Int      @id @default(autoincrement())
  total     Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  guitars   Guitar[]
  createdAt DateTime @default(now())
  updatedAt DateTime  @updatedAt
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  guitar    Guitar    @relation(fields: [guitarId], references: [id])
  guitarId  Int
}